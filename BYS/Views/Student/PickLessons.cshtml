@model List<BYS.Models.Course>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ders Seçimi</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-gray-100 via-gray-200 to-gray-300 min-h-screen flex justify-center items-center relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute w-72 h-72 bg-white opacity-10 rounded-full -top-10 -left-10"></div>
    <div class="absolute w-96 h-96 bg-white opacity-10 rounded-full bottom-0 -right-16"></div>

    <!-- Main Container -->
    <div class="backdrop-blur-lg bg-white/30 shadow-2xl rounded-3xl p-8 max-w-4xl w-full transform transition hover:scale-105 duration-300">
        <!-- Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-indigo-400 text-white py-6 rounded-t-3xl shadow-lg text-center">
            <h1 class="text-3xl font-extrabold tracking-widest uppercase drop-shadow-lg">Ders Seçimi</h1>
        </div>

        <!-- Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-500 text-white p-4 mb-6 rounded-lg shadow-md text-center">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Course Selection Form -->
        <form method="post" action="/Student/SubmitCourseSelections" class="mt-6 space-y-6">
            @for (int i = 0; i < Model.Where(c => !c.IsMandatory).Count() / 3; i++)
            {
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h3 class="text-xl font-bold text-indigo-600 mb-4">Seçmeli Ders Grubu @(i + 1)</h3>
                    <ul class="space-y-4">
                        @foreach (var course in Model.Where(c => !c.IsMandatory).Skip(i * 3).Take(3))
                        {
                            <li class="flex items-center space-x-4">
                                <input type="checkbox" name="selectedCourseIds" value="@course.CourseID"
                                       class="form-checkbox h-6 w-6 text-indigo-600 border-2 border-gray-300 rounded-md focus:ring focus:ring-indigo-500" />
                                <span class="text-lg text-gray-800 font-medium">@course.CourseName</span>
                            </li>
                        }
                    </ul>
                </div>
            }
            <div class="flex justify-center">
                <button type="submit"
                        class="bg-green-500 text-white font-bold py-3 px-6 rounded-full shadow-lg hover:bg-green-600 transform hover:scale-105 transition-all duration-300">
                    Ders Seçimlerini Gönder
                </button>
            </div>
        </form>
    </div>
</body>
</html>
