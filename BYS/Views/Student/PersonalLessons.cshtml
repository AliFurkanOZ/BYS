@model List<BYS.Models.StudentCourseSelections>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Derslerim</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-teal-100 via-teal-200 to-teal-300 min-h-screen flex justify-center items-center relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute w-72 h-72 bg-white opacity-10 rounded-full -top-10 -left-10"></div>
    <div class="absolute w-96 h-96 bg-white opacity-10 rounded-full bottom-0 -right-16"></div>

    <!-- Main Container -->
    <div class="backdrop-blur-lg bg-white/30 shadow-2xl rounded-3xl p-8 max-w-5xl w-full transform transition hover:scale-105 duration-300">
        <!-- Header -->
        <div class="bg-gradient-to-r from-teal-600 to-teal-400 text-white py-6 rounded-t-3xl shadow-lg text-center">
            <h1 class="text-3xl font-extrabold tracking-widest uppercase drop-shadow-lg">Derslerim</h1>
        </div>

        <!-- Courses Table -->
        <div class="overflow-x-auto mt-6 rounded-xl shadow-lg">
            <table class="min-w-full text-sm text-left text-gray-700 bg-white rounded-lg">
                <thead class="bg-teal-600 text-white text-md uppercase">
                    <tr>
                        <th class="py-3 px-6">#</th>
                        <th class="py-3 px-6">Öğrenci ID</th>
                        <th class="py-3 px-6">Ders Adı</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (Model != null && Model.Any())
                    {
                        int index = 1;
                        @foreach (var course in Model)
                        {
                            <tr class="hover:bg-gray-100 transition duration-300 ease-in-out">
                                <td class="py-3 px-6 text-center">@index++</td>
                                <td class="py-3 px-6">@course.StudentID</td>
                                <td class="py-3 px-6">@course.Course.CourseName</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="py-3 px-6 text-center text-gray-500">Henüz kayıtlı bir dersiniz bulunmamaktadır.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Footer -->
        <div class="text-center py-4 mt-6 text-gray-600 text-sm">
            <p>&copy; 2024 Öğrenci Yönetim Sistemi | Tüm Hakları Saklıdır</p>
        </div>
    </div>
</body>
</html>
