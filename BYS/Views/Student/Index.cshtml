@model BYS.Models.Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Öğrenci Paneli</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-green-400 via-blue-500 to-purple-500 min-h-screen flex justify-center items-center relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute w-72 h-72 bg-white opacity-10 rounded-full -top-10 -left-10"></div>
    <div class="absolute w-96 h-96 bg-white opacity-10 rounded-full bottom-0 -right-16"></div>

    <!-- Main Container -->
    <div class="backdrop-blur-lg bg-white/30 shadow-2xl rounded-3xl p-8 max-w-4xl w-full transform transition hover:scale-105 duration-300">
        <!-- Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-indigo-400 text-white py-6 rounded-t-3xl shadow-lg text-center">
            <h1 class="text-4xl font-extrabold tracking-widest uppercase drop-shadow-lg">Öğrenci Paneli</h1>
        </div>

        <!-- Student Info -->
        <div class="p-6 text-gray-900 text-center space-y-6">
            <div class="p-4 rounded-xl bg-gray-100 shadow-md hover:shadow-lg transition">
                <p class="text-lg font-medium tracking-wide">📌 <span class="text-gray-500">Öğrenci ID:</span> <strong>@Model.StudentID</strong></p>
            </div>
            <div class="p-4 rounded-xl bg-gray-100 shadow-md hover:shadow-lg transition">
                <p class="text-2xl font-bold tracking-wide">👤 <span class="text-gray-500">Ad Soyad:</span> <strong>@Model.FirstName @Model.LastName</strong></p>
            </div>
        </div>

        <!-- Buttons -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 px-6">
            <a href="@Url.Action("PickLessons", "Student")"
               class="bg-blue-600 text-white py-4 px-6 rounded-2xl shadow-lg hover:bg-blue-500 transform hover:scale-105 transition-all duration-300 text-center font-semibold flex items-center justify-center space-x-2">
                <span>📚</span>
                <span>Ders Seçim</span>
            </a>

            <a href="@Url.Action("PersonalLessons", "Student")"
               class="bg-green-500 text-white py-4 px-6 rounded-2xl shadow-lg hover:bg-green-400 transform hover:scale-105 transition-all duration-300 text-center font-semibold flex items-center justify-center space-x-2">
                <span>📝</span>
                <span>Ders Yönetimi</span>
            </a>

            <a href="@Url.Action("Logout", "Account")"
               class="bg-red-500 text-white py-4 px-6 rounded-2xl shadow-lg hover:bg-red-400 transform hover:scale-105 transition-all duration-300 text-center font-semibold flex items-center justify-center space-x-2">
                <span>🚪</span>
                <span>Çıkış Yap</span>
            </a>
        </div>

        <!-- Footer -->
        <div class="text-center py-4 mt-6 text-gray-600 text-sm">
            <p>&copy; 2024 Öğrenci Yönetim Sistemi | Tüm Hakları Saklıdır</p>
        </div>
    </div>
</body>
</html>
