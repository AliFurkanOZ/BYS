@{
    ViewData["Title"] = "Ders Seçim Onayı";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ders Seçim Onayı</title>
    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-green-100 via-teal-100 to-blue-100 min-h-screen flex justify-center items-center relative overflow-hidden">

    <!-- Decorative Elements -->
    <div class="absolute w-72 h-72 bg-white opacity-10 rounded-full -top-10 -left-10"></div>
    <div class="absolute w-96 h-96 bg-white opacity-10 rounded-full bottom-0 -right-16"></div>

    <!-- Main Container -->
    <div class="backdrop-blur-lg bg-white/30 shadow-2xl rounded-3xl p-8 max-w-2xl w-full transform transition hover:scale-105 duration-300">
        <!-- Header -->
        <div class="bg-gradient-to-r from-teal-600 to-teal-400 text-white py-6 rounded-t-3xl shadow-lg text-center">
            <h1 class="text-5xl font-extrabold tracking-wide uppercase text-teal-900 drop-shadow-2xl">Ders Seçim Onayı</h1>
        </div>

        <!-- Confirmation Message -->
        <div class="p-6 text-gray-900 text-center space-y-6">
            <div class="p-4 rounded-xl bg-teal-100 shadow-md hover:shadow-lg transition">
                <h4 class="text-xl font-bold text-teal-900 mb-2">Başarıyla Kaydedildi!</h4>
                <p class="text-lg text-gray-800">
                    Ders seçimleriniz başarıyla kaydedilmiştir. En kısa sürede öğretmenler tarafından onaylanacaktır.
                </p>
            </div>
        </div>

        <!-- Button -->
        <div class="flex justify-center mt-6">
            <a href="@Url.Action("PersonalLessons", "Student")"
               class="bg-gradient-to-r from-teal-600 to-green-600 text-teal-900 py-5 px-10 rounded-2xl shadow-xl hover:from-teal-700 hover:to-green-700 transition-all duration-500 text-center font-bold flex items-center justify-center space-x-3 transform hover:scale-110">
                <span class="text-2xl text-white">📚</span>
                <span class="text-xl text-white">Derslerim Sayfasına Git!</span>
            </a>
        </div>

        <!-- Footer -->
        <div class="text-center py-4 mt-6 text-gray-600 text-sm">
            <p>&copy; 2024 Öğrenci Yönetim Sistemi | Tüm Hakları Saklıdır</p>
        </div>
    </div>
</body>
</html>
