@{
    ViewData["Title"] = "Hata";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-red-500 via-yellow-500 to-orange-500 min-h-screen flex justify-center items-center relative overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute w-72 h-72 bg-white opacity-10 rounded-full -top-10 -left-10"></div>
    <div class="absolute w-96 h-96 bg-white opacity-10 rounded-full bottom-0 -right-16"></div>

    <!-- Main Container -->
    <div class="backdrop-blur-lg bg-white/30 shadow-2xl rounded-3xl p-8 max-w-2xl w-full transform transition hover:scale-105 duration-300">
        <!-- Header -->
        <div class="bg-gradient-to-r from-red-600 to-red-400 text-white py-6 rounded-t-3xl shadow-lg text-center">
            <h1 class="text-3xl font-extrabold tracking-widest uppercase drop-shadow-lg">Bir Hata Oluştu</h1>
        </div>

        <!-- Error Message -->
        <div class="p-6 text-gray-900 text-center space-y-6">
            <div class="p-4 rounded-xl bg-red-100 shadow-md hover:shadow-lg transition">
                @if (ViewBag.ErrorMessage != null)
                {
                    <p class="text-lg font-medium text-red-800">@ViewBag.ErrorMessage</p>
                }
                else
                {
                    <p class="text-lg font-medium text-red-800">Bilinmeyen bir hata oluştu.</p>
                }
            </div>
        </div>

        <!-- Button -->
        <div class="flex justify-center mt-6">
            <form action="@Url.Action("Routing", "Advisor")" method="get">
                <button type="submit"
                        class="bg-blue-600 text-white py-3 px-6 rounded-2xl shadow-lg hover:bg-blue-500 transform hover:scale-105 transition-all duration-300 text-center font-semibold flex items-center justify-center space-x-2">
                    <span>🔙</span>
                    <span>Ana Sayfaya Dön</span>
                </button>
            </form>
        </div>


        <!-- Footer -->
        <div class="text-center py-4 mt-6 text-gray-600 text-sm">
            <p>&copy; 2024 Öğrenci Yönetim Sistemi | Tüm Hakları Saklıdır</p>
        </div>
    </div>
</body>
</html>
